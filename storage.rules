rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to blog images for everyone
    match /blog-images/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow read access to listing images for everyone
    match /listings/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow read and write access to authenticated users for all other paths
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
